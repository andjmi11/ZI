@inherits LayoutComponentBase

<PageTitle>ChatApp</PageTitle>

<style>
    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    header {
        text-align: center;
        padding: 20px 0;
        background-color: #f0f0f0;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }

    main {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 20px 0;
    }

    .content {
        width: 100%;
        max-width: 800px;
    }
</style>

<div class="page">
    <header>
        <div class="title">
            <h3 style="font-family: 'Arial', sans-serif; color: #333; text-transform: uppercase;">Chat-App</h3>
        </div>
    </header>

    <main>
     

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
